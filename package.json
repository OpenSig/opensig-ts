{
  "name": "opensig-ts",
  "version": "0.1.4",
  "description": "OpenSig typescript library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/index.js --bundle --minify --format=iife --global-name=opensig --outfile=dist/opensig-ts.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opensig",
    "digital",
    "signature",
    "e-signature",
    "blockchain"
  ],
  "author": "OpenSig",
  "license": "MIT",
  "dependencies": {
    "@noble/ciphers": "^2.0.0",
    "@noble/hashes": "^2.0.0",
    "@scure/base": "^2.0.0",
    "ethers": "^6.15.0",
    "msgpackr": "^1.11.5"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.27.1",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
